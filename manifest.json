{
	"manifest_version": 3,
	"name": "Simple Reader",
	"version": "0.1.0",
	"icons": {
		"128": "icons/icon128.png"
	},
	"action": {
		"default_title": "Open Reader View",
		"default_icon": {
			"128": "icons/icon128.png"
		}
	},
	"background": { "service_worker": "background.js" },
	"permissions": [
		"scripting",
		"downloads",
		"offscreen",
		"clipboardWrite",
		"activeTab"
	],
	"web_accessible_resources": [
		{
			"resources": ["content/overlay.css"],
			"matches": ["<all_urls>"]
		}
	]
}
