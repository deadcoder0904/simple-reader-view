// Deno config for formatting and simple tasks
{
  "fmt": {
    // Formatting preferences
    "useTabs": true,
    "indentWidth": 2,
    "lineWidth": 100,
    "semiColons": false,
    "singleQuote": true,
    // How to wrap Markdown/HTML prose: "preserve" | "always" | "never"
    "proseWrap": "preserve",
    // Skip common vendored folders
    "exclude": [".git", "node_modules", "dist", "build"],
  },
  "tasks": {
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
  },
}
